@model Ts3.pl.Models.Users
@using DataLayer.WebCommon.Authorization;

<div class="pull-right">
    @if (string.IsNullOrEmpty(SessionPresister.UserName))
    {
        <ul class="nav navbar-right navbar-nav">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-user"></span><b> Zaloguj się!</b> <span class="caret"></span></a>
                <ul id="login-dp" class="dropdown-menu">
                    <li>
                        <div class="row">
                            <div class="col-md-12">

                                <div class="social-buttons">
                                    <div class="iconSpecial"><i class="glyphicon glyphicon-user"></i> </div>
                                </div>

                                @using (Html.BeginForm("Login", "Registry"))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.DisplayName, new { htmlAttributes = new { @class = "form-control input-md", @placeholder = "Wpisz login..." } })
                                        @Html.ValidationMessageFor(model => model.DisplayName, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.PasswordFor(model => model.Password, new { @class = "form-control input-md", @placeholder = "Wpisz hasło..." })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                        <div class="help-block text-right"><a href="">Zapomniałeś hasło ?</a></div>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary btn-block">Zaloguj</button>
                                    </div>

                                }

                            </div>
                        </div>
                    </li>
                </ul>
            </li>
        </ul>
    }
    else
    {
        <ul class="nav navbar-right navbar-nav">
            <li class="">
                <a href="#" ><span class="glyphicon glyphicon-user"></span><b><label class="text-info">&nbsp;&nbsp;@SessionPresister.UserName</label></b></a>
            </li>
        </ul>
    }
</div>
@Scripts.Render("~/bundles/bootstrap")
@Styles.Render("~/Content/bootstrap")